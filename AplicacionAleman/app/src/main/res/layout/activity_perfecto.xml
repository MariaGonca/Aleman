<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Perfecto"
    android:background="@drawable/bandera2">

    <TextView
        android:id="@+id/veredicto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/perfecto"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="60dp"
        android:textAlignment="center"
        android:fontFamily="serif"
        />

    <TextView
        android:id="@+id/nora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10/10"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/accent"
        android:fontFamily="serif-monospace"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/sobresaliente" />

    <ImageButton
        android:id="@+id/sonido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/oido"
        android:background="@color/material_on_surface_stroke"
        android:layout_marginBottom="10dp"

        />

    <ImageButton
        android:id="@+id/volverMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flechavolv"
        android:background="@color/material_on_surface_stroke"
        android:onClick="saliraprobado"/>


</LinearLayout>